            <string>/// deactivate everything &amp; create cards
instance_deactivate_all(true)

instance_activate_object(obj_controller) // activate for scrolling and zoom
instance_activate_object(obj_mouse) // activate for scrolling and zoom

instance_create(x,y,obj_select_card_cancel)
instance_create(x,y,obj_select_card_done)
instance_create(x,y,obj_select_card_info)


choose_card = 0 // used in scr_cards
start_x = 440
x2 = start_x // start x and y to create cards
y2 = 340

// create all cards remaining in deck
for(i = 1; i &lt;= deck_size; i++)
{
    if not global.current_deck.card_taken[i] // if the card is still in the deck
    {
        create_card = instance_create(x2,y2,obj_temp_card)
        create_card.index = i
        choose_card = i // set chosen card to current index (makes it compatible with scr_cards)
        scr_cards()
        x2 += 280
        
        if (instance_number(obj_temp_card) % 8 = 0) // every x cards, create a new row
        {x2 = start_x; y2 += 320}
    }
}

