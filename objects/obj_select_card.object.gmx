        <arguments>
          <argument>
            <kind>1</kind>
            <string>/// continue game!

instance_activate_all() // have to activate everything first because of the decks

card_x = 0 // the x that the card sits when created

for(i = 0; i &lt; card_list_size; i++)
{
    if card_list[i].selected = true // if the card in the list is still selected
    {
        // create the card object and its values
        obj = instance_create(mouse_x,mouse_y,obj_card)
        obj.depth = obj_mouse.depth_count
        obj_mouse.depth_count -= 1
        obj.belongsto = global.current_deck.deck_type
        obj.close_deck = global.current_deck
        obj.face_down = false
        obj.stack_id = card_list[i].index // give card the number it was in the deck (incase added back to deck)
        global.current_deck.card_taken[card_list[i].index] = true
        global.current_deck.current_deck_size -= 1
        
        // set the card position (stack in players hand)
        if global.current_deck.y &lt; global.center_y // opponent side
        {
            obj.x = global.current_deck.x-400 + card_x
            card_x += 200
            obj.y = global.current_deck.y-760
        }
        else
        { 
            obj.x = global.current_deck.x+400 + card_x
            card_x -= 200
            obj.y = global.current_deck.y+760
        }
        
        
        
        obj.image_index = card_list[i].image_index
        obj.sprite_index = card_list[i].sprite_index
        
        log_text(global.current_deck.deck_type + " removed card from deck " + string(obj.image_index))

    }
}

with (obj_temp_card) instance_destroy()
with (obj_select_card_cancel) instance_destroy()
with (obj_select_card_done) instance_destroy()
with (obj_select_card_info) instance_destroy()
with (obj_text_controls) instance_destroy()

scr_zoom_out()

instance_destroy()





