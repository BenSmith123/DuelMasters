            <string>/// create the cards to view / add to deck

// move the arrow to this title
if not instance_exists(obj_civ_pointer) {instance_create(130,y,obj_civ_pointer)}
else {obj_civ_pointer.x = 130; obj_civ_pointer.y = y}

with (obj_card_edit) instance_destroy() // delete any cards already displayed
with (obj_add_to_deck) instance_destroy() // delete the cards add button
with (obj_remove_from_deck) instance_destroy() // delete the cards add button

view_object[0] = obj_mouse // screen follow the mouse

// x,y pos of where to create the first sprite
card_x = 740
card_y = 480

choose_card = 0 // temp variable used to avoid crashing scr_cards

// create the other cards
for(i = 0; i &lt; global.custom_deck_size; i++)
{
    if (i % 7 = 0) and (i &gt; 0) // 7 cards in a row then new column
    {
        card_x = 740
        card_y += 380
    }

    create_card = instance_create(card_x,card_y,obj_card_edit)
    create_card.is_in_deck = true
    
    card[i+1] = global.custom_card[i+1] // this makes the script compatible
    choose_card = i+1 // and avoids any crashes ^^
    scr_cards() // call script to set each card sprites

    create_card.preset = global.custom_card[i+1] - create_card.image_index // set origonal preset (used when removing from deck)
    create_card.has_multiple = true // stops card from highlighting if theres more cards in the deck
    // ^^ cards are displayed seperately even if other copies exist
    
    card_x += 300

}




